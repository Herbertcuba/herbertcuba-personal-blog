---
layout: base.njk
---

<article class="post">
  <div class="container container--narrow">
    <header class="post-header">
      <div class="meta">
        <time datetime="{{ date }}">{{ date | isoDate }}</time>
        <span>// TRANSMISSION</span>
      </div>
      <h1>{{ title }}</h1>
      {% if excerpt %}
        <p class="lead">{{ excerpt }}</p>
      {% endif %}
    </header>
  </div>

  <div class="container">
    {% if image %}
      <img src="{{ image }}" alt="" class="post-hero-image" />
    {% endif %}
  </div>

  <div class="prose">
    {{ content | safe }}
  </div>
</article>

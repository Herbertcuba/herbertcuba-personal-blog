---

<article class="post">
  <div class="container container--narrow">
    <header class="post-header">
      <div class="meta">
        <time datetime="{{ date }}">{{ date | isoDate }}</time>
        <span>// TRANSMISSION</span>
      </div>
      <h1>{{ title }}</h1>
      {% if excerpt %}
        <p class="lead">{{ excerpt }}</p>
      {% endif %}
    </header>
  </div>

  <div class="container container--full">
    {% if featuredImage %}
      <img src="{{ featuredImage }}" alt="" class="post-hero-image" />
    {% endif %}
  </div>

  <div class="prose">
    {{ content | safe }}
  </div>

  {% if tags %}
  <div class="container container--narrow">
    <div class="post-tags">
      {% for tag in tags %}
        <span class="post-tag">{{ tag }}</span>
      {% endfor %}
    </div>
  </div>
  {% endif %}
</article>

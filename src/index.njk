---
layout: base.njk
title: Home
---

<section class="hero">
  <div class="hero-content">
    <div class="tagline">{{ site.tagline }}</div>
    <h1>{{ site.heroTitle }}</h1>
    <p class="lead">{{ site.heroLead }}</p>
  </div>
</section>

{# Featured (latest) post, Webflow/editorial vibe #}
{% set featured = collections.posts[0] %}
{% if featured %}
<section class="featured">
  <div class="featured-grid">
    <div class="featured-copy">
      <div class="eyebrow">Latest</div>
      <h2 class="featured-title"><a href="{{ featured.url }}">{{ featured.data.title }}</a></h2>
      <div class="featured-meta">{{ featured.date | isoDate }}</div>
      {% if featured.data.excerpt %}
        <p class="featured-excerpt">{{ featured.data.excerpt }}</p>
      {% endif %}
      <a class="featured-cta" href="{{ featured.url }}">Read article â†’</a>
    </div>
    <div class="featured-media">
      {% if featured.data.image %}
        <img src="{{ featured.data.image }}" alt="{{ featured.data.title }}" />
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

<section class="posts">
  <h2>Latest Thoughts</h2>
  <ul class="post-list">
    {% for post in collections.posts.slice(0, 30) %}
      <li class="post-item">
        <a class="post-link" href="{{ post.url }}">
          {% if post.data.image %}
            <div class="post-image-container">
              <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="post-thumbnail" />
            </div>
          {% endif %}
          <div class="post-content">
            <div class="post-header-sm">
              <span class="post-date">{{ post.date | isoDate }}</span>
              <h3 class="post-title">{{ post.data.title }}</h3>
            </div>
          </div>
        </a>
      </li>
    {% endfor %}
  </ul>
</section>

---
layout: base.njk
title: Home
---

{# ═══════════════════════════════════════════════════════════════════════════
   HERO SECTION — Typographic statement
   ═══════════════════════════════════════════════════════════════════════════ #}
<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="tagline">{{ site.tagline }}</div>
      <h1>{{ site.heroTitle | safe }}</h1>
      <p class="lead">{{ site.heroLead }}</p>
    </div>
  </div>
</section>

{# ═══════════════════════════════════════════════════════════════════════════
   BENTO GRID — Featured posts in asymmetric layout
   ═══════════════════════════════════════════════════════════════════════════ #}
{% if collections.posts.length > 0 %}
<section class="bento" aria-label="Featured articles">
  <div class="container">
    <div class="bento-grid animate-stagger">
      
      {# Hero Cell — Latest/Featured Post #}
      {% set featured = collections.posts[0] %}
      <article class="bento-cell bento-cell--hero">
        <a href="{{ featured.url }}" aria-label="Read: {{ featured.data.title }}">
          {% if featured.data.featuredImage %}
          <div class="bento-cell__image">
            <img src="{{ featured.data.featuredImage }}" alt="" loading="eager" />
          </div>
          <div class="bento-cell__overlay"></div>
          {% endif %}
          <div class="bento-cell__content">
            <span class="bento-cell__eyebrow">Latest</span>
            <h2 class="bento-cell__title">{{ featured.data.title }}</h2>
            <span class="bento-cell__meta">{{ featured.date | isoDate }}</span>
            {% if featured.data.tags %}
            <div class="bento-cell__tags">
              {% for tag in featured.data.tags.slice(0, 3) %}
                <span class="post-tag">{{ tag }}</span>
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </a>
      </article>
      
      {# Secondary Posts — Tall, Wide, Squares #}
      {% if collections.posts[1] %}
      <article class="bento-cell bento-cell--tall">
        <a href="{{ collections.posts[1].url }}" aria-label="Read: {{ collections.posts[1].data.title }}">
          {% if collections.posts[1].data.featuredImage %}
          <div class="bento-cell__image">
            <img src="{{ collections.posts[1].data.featuredImage }}" alt="" loading="lazy" />
          </div>
          <div class="bento-cell__overlay"></div>
          {% endif %}
          <div class="bento-cell__content">
            <span class="bento-cell__eyebrow">{{ collections.posts[1].date | isoDate }}</span>
            <h3 class="bento-cell__title">{{ collections.posts[1].data.title }}</h3>
            {% if collections.posts[1].data.tags %}
            <div class="bento-cell__tags">
              {% for tag in collections.posts[1].data.tags.slice(0, 2) %}
                <span class="post-tag">{{ tag }}</span>
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </a>
      </article>
      {% endif %}

      {% if collections.posts[2] %}
      <article class="bento-cell bento-cell--wide">
        <a href="{{ collections.posts[2].url }}" aria-label="Read: {{ collections.posts[2].data.title }}">
          {% if collections.posts[2].data.featuredImage %}
          <div class="bento-cell__image">
            <img src="{{ collections.posts[2].data.featuredImage }}" alt="" loading="lazy" />
          </div>
          <div class="bento-cell__overlay"></div>
          {% endif %}
          <div class="bento-cell__content">
            <span class="bento-cell__eyebrow">{{ collections.posts[2].date | isoDate }}</span>
            <h3 class="bento-cell__title">{{ collections.posts[2].data.title }}</h3>
            {% if collections.posts[2].data.tags %}
            <div class="bento-cell__tags">
              {% for tag in collections.posts[2].data.tags.slice(0, 2) %}
                <span class="post-tag">{{ tag }}</span>
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </a>
      </article>
      {% endif %}

      {% if collections.posts[3] %}
      <article class="bento-cell bento-cell--wide">
        <a href="{{ collections.posts[3].url }}" aria-label="Read: {{ collections.posts[3].data.title }}">
          {% if collections.posts[3].data.featuredImage %}
          <div class="bento-cell__image">
            <img src="{{ collections.posts[3].data.featuredImage }}" alt="" loading="lazy" />
          </div>
          <div class="bento-cell__overlay"></div>
          {% endif %}
          <div class="bento-cell__content">
            <span class="bento-cell__eyebrow">{{ collections.posts[3].date | isoDate }}</span>
            <h3 class="bento-cell__title">{{ collections.posts[3].data.title }}</h3>
            {% if collections.posts[3].data.tags %}
            <div class="bento-cell__tags">
              {% for tag in collections.posts[3].data.tags.slice(0, 2) %}
                <span class="post-tag">{{ tag }}</span>
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </a>
      </article>
      {% endif %}

      {# Additional posts as squares #}
      {% for post in collections.posts.slice(4, 7) %}
      <article class="bento-cell bento-cell--square">
        <a href="{{ post.url }}" aria-label="Read: {{ post.data.title }}">
          {% if post.data.featuredImage %}
          <div class="bento-cell__image">
            <img src="{{ post.data.featuredImage }}" alt="" loading="lazy" />
          </div>
          <div class="bento-cell__overlay"></div>
          {% endif %}
          <div class="bento-cell__content">
            <span class="bento-cell__eyebrow">{{ post.date | isoDate }}</span>
            <h3 class="bento-cell__title">{{ post.data.title }}</h3>
            {% if post.data.tags %}
            <div class="bento-cell__tags">
              {% for tag in post.data.tags.slice(0, 2) %}
                <span class="post-tag">{{ tag }}</span>
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </a>
      </article>
      {% endfor %}
      
    </div>
  </div>
</section>
{% endif %}

{# ═══════════════════════════════════════════════════════════════════════════
   POST INDEX — Full archive (if more than bento shows)
   ═══════════════════════════════════════════════════════════════════════════ #}
{% if collections.posts.length > 7 %}
<section class="posts" aria-label="All articles">
  <div class="container">
    <header class="posts__header">
      <span class="posts__title">Archive</span>
    </header>
    
    <ol class="post-list animate-stagger">
      {% for post in collections.posts.slice(7) %}
        <li class="post-item">
          <a class="post-link" href="{{ post.url }}">
            <span class="post-number">{{ loop.index }}</span>
            <span class="post-title">{{ post.data.title }}</span>
            <time class="post-date" datetime="{{ post.date | isoDate }}">{{ post.date | isoDate }}</time>
          </a>
        </li>
      {% endfor %}
    </ol>
  </div>
</section>
{% endif %}
